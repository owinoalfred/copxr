{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "checkJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}